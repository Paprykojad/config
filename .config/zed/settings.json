// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "telemetry": {
    "metrics": true
  },
  "soft_wrap": "editor_width",
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  // "buffer_font_family": "JetBrainsMonoNerdFont",
  "buffer_font_features": {
    "calt": true
    // "cv01": 7
  },
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "One Dark"
  },
  "autosave": "on_focus_change",
  "auto_update": true,
  "confirm_quit": false,
  "centered_layout": {
    "left_padding": 0.2,
    "right_padding": 0.2
  },
  "inline_completions": {
    "disabled_globs": [".env", ".gitignore"]
  },
  "current_line_highlight": "gutter",
  "cursor_blink": false,
  "scrollbar": {
    "show": "auto",
    "cursors": true,
    "git_diff": true,
    "search_results": true,
    "selected_symbol": true,
    "diagnostics": true
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": true
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true
  },
  "formatter": "language_server",
  // "format_on_save": 1,
  "use_autoclose": true,
  "always_treat_brackets_as_autoclosed": false,
  "git": {
    "git_gutter": "tracked_files",
    "gutter_debounce": 0,
    "inline_blame": {
      "enabled": true
    }
  },
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 1,
    "coloring": "fixed",
    "background_coloring": "disabled"
  },
  "hard_tabs": false
}
